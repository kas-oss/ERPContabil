@model WEB_ERP_CONTABIL.Models.Cliente;
@{
    ViewData["Title"] = "Adicionar Cliente";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <a asp-controller="Cliente" asp-action="Index" class="btn btn-app"><i class="fas fa-arrow-left"></i> Voltar</a>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Cliente" asp-action="Index">Clientes</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<form asp-controller="Cliente" asp-action="Create" method="post">
<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#infoGeral">Informações Gerais</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">

                <div class="tab-content">
                    <div class="tab-pane fade show active" id="infoGeral">
                        <div class="card">
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-md text-center">
                                        <div class="card-body box-profile text-center">
                                            <div class="mb-2">
                                                <img class="profile-user-img img-fluid img-circle" src="~/img/perfil.jpg" alt="User profile picture">
                                            </div>
                                            <a href="#" class="btn btn-dark btn-sm"><i class="fas fa-edit"></i> Carregar</a>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="@Model.Nome"></label>
                                            <input asp-for="@Model.Nome" class="form-control" placeholder="Digite o nome do cliente">
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="@Model.Sobrenome"></label>
                                            <input asp-for="@Model.Sobrenome" class="form-control" placeholder="Digite o sobrenome do cliente">
                                        </div>
                                    </div>

                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label asp-for="@Model.DataNascimento"></label>
                                            <div class="input-group date">
                                                <input asp-for="@Model.DataNascimento"  type="date" class="form-control datetimepicker-input">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-right">
                <button type="submit" class="btn  bg-gradient-primary">Salvar</button>
            </div>
        </div>
    </div>
</div>
</form>